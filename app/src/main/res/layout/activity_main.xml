<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout tools:context="com.example.deepa.readwritefile.MainActivity"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:textSize="24sp"
        android:text="Reading and Writing to External Storage"/>


    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/myInputText"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:minLines="3"
        android:lines="5"
        android:ems="10">

    <requestFocus/>

</EditText>


    <LinearLayout android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:weightSum="1.0">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/saveExternalStorage"
        android:text="ADD DATA"
        android:layout_weight="0.5"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/getExternalStorage"
        android:text="READ" android:layout_weight="0.5"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/response" android:text="" android:textAppearance="?android:attr/textAppearanceMedium" android:padding="5dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        />

</LinearLayout>